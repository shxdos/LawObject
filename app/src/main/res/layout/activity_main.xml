<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_topbar"></include>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <LinearLayout
        android:id="@+id/rg_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rb_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_button_main"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="首页"
            android:textSize="12dp"
            android:textColor="@drawable/selector_color_menu" />

        <TextView
            android:id="@+id/rb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_button_select"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textSize="12dp"
            android:text="法规库"
            android:textColor="@drawable/selector_color_menu" />
        <TextView
            android:id="@+id/rb_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_button_search"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="法规搜索"
            android:textSize="12dp"
            android:textColor="@drawable/selector_color_menu" />
    </LinearLayout>
</LinearLayout>
