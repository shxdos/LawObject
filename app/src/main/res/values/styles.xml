<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Actionbar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--Status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/colorBack</item>
    </style>
    <style name="AppTheme.Base" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>

    </style>
    <style name="Theme_Dialog" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否有系统自带标题栏 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景是否变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除黑色背景 -->
        <item name="android:windowFullscreen">false</item>
        <!-- 设置全屏 -->
    </style>
    <style name="style_mainmenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorBlue</item>
        <item name="tabSelectedTextColor">@color/colorBlue</item>
    </style>
</resources>
